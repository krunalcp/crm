<p id="notice"><%= notice %></p>

<h1>Persons</h1>

<table>
  <thead>
    <tr>
      <th>Prefix name</th>
      <th>First name</th>
      <th>Middle Name</th>
      <th>Last name</th>
      <th>Suffix name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>State</th>
      <th>City</th>
      <th>Zip1</th>
      <th>Zip2</th>
      <th>Gender</th>
      <th>Unsubscribe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @persons.each do |person| %>
      <tr>
        <td><%= person.prefix_name %></td>
        <td><%= person.first_name %></td>
        <td><%= person.middle_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.suffix_name %></td>
        <td><%= person.address1 %></td>
        <td><%= person.address2 %></td>
        <td><%= person.state %></td>
        <td><%= person.city %></td>
        <td><%= person.zip1 %></td>
        <td><%= person.zip2 %></td>
        <td><%= person.gender %></td>
        <td><%= person.unsubscribe %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

