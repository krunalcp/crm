<p id="notice"><%= notice %></p>

<h1>Imports</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>File</th>
      <th>Status</th>
      <th>Update Date</th>
      <th>Number of Success</th>
      <th>Number of Failed</th>
      <th>Total Record</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imports.each do |import| %>
      <tr>
        <td><%= import.try(:user).try(:first_name) %></td>
        <td><%= import.upload_file_name %></td>
        <td><%= import.status %></td>
        <td><%= import.updated_at.strftime('%F') %></td>
        <td><%= import.number_of_success %></td>
        <td><%= import.number_of_failed %></td>
        <td><%= import.total_record %></td>
        <td><%= link_to 'Show', import %></td>
        <td><%= link_to 'Edit', edit_import_path(import) %></td>
        <td><%= link_to 'Destroy', import, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

